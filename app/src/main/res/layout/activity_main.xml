<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.52"
        android:orientation="horizontal"
        >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BaudRate"
            android:entries="@array/BaudRate"
            android:id="@+id/sp_Ser_baudRate"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Camera"
            android:id="@+id/bt_Ser_camera"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Roi"
            android:id="@+id/bt_Ser_roi"
            android:layout_weight="1"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mode"
            android:entries="@array/Mode"
            android:id="@+id/sp_Ser_Mode"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.52"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Serial"
            android:id="@+id/tv_ser_State"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Camera"
            android:id="@+id/tv_camera_State"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_Ser_derive"
            android:layout_weight="0.4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Receive:"
            android:textSize="20dp"
            android:layout_weight="0.4"
            android:id="@+id/tv_Ser_rec"
            android:gravity="top|left"
            />
        <TextureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:id="@+id/textureView_resultShow"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.52"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SQLite"
            android:id="@+id/bt_Ser_sql"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Params"
            android:id="@+id/bt_Ser_params"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ready"
            android:id="@+id/bt_Ser_Ready"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Clear"
            android:id="@+id/bt_Ser_clear"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.52"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Open"
            android:id="@+id/bt_Ser_open"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Send"
            android:id="@+id/bt_Ser_send"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Close"
            android:id="@+id/bt_Ser_close"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Refresh"
            android:id="@+id/bt_Ser_refresh"
            />
    </LinearLayout>

</LinearLayout>