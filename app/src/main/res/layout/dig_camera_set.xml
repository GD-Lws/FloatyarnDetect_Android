<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exposureTime:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_exposureTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="100"
        android:inputType="number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ISO:"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/et_iso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="520"
        android:textSize="20dp"
        android:inputType="number"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FocusDistance:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_focusDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="200"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZoomRatio:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_zoomRatio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="300"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        />
<!--     Left    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roi1_XY_s:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_roi1_xy_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="520"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roi1_XY_e:"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/et_roi1_xy_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="600"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roi2_XY_s"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_roi2_xy_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="200"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roi2_xy_e:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_roi2_xy_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="300"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认参数"
        android:id="@+id/bt_camera_ed_set"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="载入参数"
        android:id="@+id/bt_camera_ed_load"
        />
</LinearLayout>
